<ul class="nav">
  <% nav_links.each do |link| %>
    <% if link.nested_links.empty? %>
      <li<%= raw ' class="active"' if active_nav_link == link %>><%= link_to link.title, link.url %></li>
    <% else %>
      <li class="dropdown<%= raw ' active' if active_nav_link == link %>">
        <ul class="dropdown-menu">
          <% link.nested_links.each do |nested_link| %>
            <li<%= raw ' class="active"' if active_nav_link == nested_link %>><%= link_to nested_link.title, nested_link.url %></li>
          <% end %>
        </ul>
      </li>
    <% end %>
  <% end %>
</ul>
